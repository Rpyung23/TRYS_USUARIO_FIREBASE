<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:background="#E6E6E6"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="5dp"
    android:weightSum="1"
    android:gravity="center|start"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/id_circle_profile_chats"
        android:layout_weight="0.10"
        android:layout_width="@dimen/alto_acnho_circle_profile_chats"
        android:layout_height="@dimen/alto_acnho_circle_profile_chats"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="2dp"
        android:src="@drawable/logomenufinal"
        >
    </de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:id="@+id/textview_id_msm_chat"
        android:layout_weight="0.90"
        android:textColor="@color/colorSecondaryText"
        android:background="@drawable/round_textsize_right"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:text="MENSAJE DE PRUEBA"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
    </TextView>
</androidx.appcompat.widget.LinearLayoutCompat>
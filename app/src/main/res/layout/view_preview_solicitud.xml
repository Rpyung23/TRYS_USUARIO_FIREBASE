<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_margin="@dimen/margenes_card_alert_confrimar_cancelar_carrera"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/colorSecondaryText"
            android:textStyle="bold"
            android:text="DETALLES"
            android:background="@color/colorPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:id="@+id/id_textview_incio_solicitud"
            android:textSize="@dimen/text_size_inicio_destino_alter_detalle"
            android:drawableStart="@drawable/start"
            android:drawableTint="@color/colorSecondaryText"
            android:textColor="@color/colorSecondaryText"
            android:textStyle="bold"
            android:text="Av.9 de Octubre, Riobamba"
            android:background="@color/colorPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:id="@+id/id_text_destino_solicitud"
            android:textSize="@dimen/text_size_inicio_destino_alter_detalle"
            android:drawableStart="@drawable/end"
            android:drawableTint="@color/colorSecondaryText"
            android:textColor="@color/colorSecondaryText"
            android:textStyle="bold"
            android:text="Hotel Zeus, Riobamba"
            android:background="@color/colorPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:id="@+id/id_text_km_solicitud"
            android:textSize="@dimen/text_size_inicio_destino_alter_detalle"
            android:drawableStart="@drawable/distance"
            android:drawableTint="@color/colorSecondaryText"
            android:textColor="@color/colorSecondaryText"
            android:textStyle="bold"
            android:text="0 km"
            android:background="@color/colorPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:id="@+id/id_text_tiempo_solicitud"
            android:textSize="@dimen/text_size_inicio_destino_alter_detalle"
            android:drawableStart="@drawable/time"
            android:drawableTint="@color/colorSecondaryText"
            android:textColor="@color/colorSecondaryText"
            android:textStyle="bold"
            android:text="0 minutos"
            android:background="@color/colorPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:id="@+id/id_text_precio_solicitud"
            android:textSize="@dimen/text_size_inicio_destino_alter_detalle"
            android:drawableStart="@drawable/price"
            android:drawableTint="@color/colorSecondaryText"
            android:textColor="@color/colorSecondaryText"
            android:textStyle="bold"
            android:text="Precio : 0.00"
            android:background="@color/colorPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_confirmar_solicitud"
                android:textSize="@dimen/text_size_text_cancelar_confirmar"
                android:textStyle="bold"
                android:textColor="@color/colorSecondaryText"
                android:text="@string/text_confirmar_boton"
                android:backgroundTint="@color/colorPrimaryLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
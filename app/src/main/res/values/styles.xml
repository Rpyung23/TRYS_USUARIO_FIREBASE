<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorSecondaryText</item>
        <item name="titleTextColor">@color/colorSecondaryText</item>
    </style>

    <style name="ToolbarMapview" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>

</resources>
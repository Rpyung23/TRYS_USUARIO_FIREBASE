<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:elevation="10dp"
    android:layout_margin="7dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:orientation="horizontal"
        android:background="@color/colorSecondaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id_textview_price_card_history_booking"
                android:background="@drawable/round_cuadrado_card"
                android:textColor="@color/colorSecondaryText"
                android:textStyle="bold"
                android:textSize="@dimen/textsize_price_card_history_booking"
                android:gravity="center"
                android:text="15.30 $"
                android:layout_width="@dimen/alto_acnho_card_history_booking"
                android:layout_height="@dimen/alto_acnho_card_history_booking"
                >
            </TextView>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/id_textview_start_card_history_booking"
                    android:paddingRight="7dp"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:drawableStart="@drawable/start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:textSize="17sp"
                    android:id="@+id/id_textview_end_card_history_booking"
                    android:paddingRight="7dp"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/id_textview_plate_card_history_booking"
                    android:paddingRight="7dp"
                    android:gravity="center_vertical"
                    android:drawableTint="@color/colorPrimaryText"
                    android:drawableStart="@drawable/plate_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <TextView
            android:id="@+id/id_textview_fecha_card_history_booking"
            android:layout_margin="2dp"
            android:textColor="#ccffffff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="21-02-2020"
            android:layout_gravity="bottom|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.cardview.widget.CardView>